<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddEditNoteActivity">

    <EditText
        android:id="@+id/etEditNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        android:background="@drawable/input"
        android:inputType="textMultiLine"
        android:hint="Note Title"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEditNoteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:hint="Description"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:padding="8dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_below="@+id/etEditNoteTitle"/>


    <Button
        android:id="@+id/btnAddUpdate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/etEditNoteDescription"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button"
        android:text="Button"
        android:textAllCaps="false"
        app:backgroundTint="@color/darkOrange" />
</RelativeLayout>